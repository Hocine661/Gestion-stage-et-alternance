<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.ece.application.ListeDeclarationController"
            style="-fx-background-color: #FFFFFF;">

    <children>

        <ImageView layoutX="20" layoutY="15" fitHeight="60" preserveRatio="true">
            <image>
                <Image url="@logo.png"/>
            </image>
        </ImageView>

        <Label layoutX="100" layoutY="25"
               text="Liste des Déclarations"
               style="-fx-font-size: 28px; -fx-text-fill: #3e4a70; -fx-font-weight: bold;"/>

        <VBox layoutX="20" layoutY="90" spacing="10"
              prefWidth="860" prefHeight="450"
              style="-fx-background-color: #F6F6F6;
                     -fx-background-radius: 20;
                     -fx-padding: 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 2);">
            <TableView fx:id="tableView" prefHeight="390" prefWidth="820">

                <columns>
                    <TableColumn fx:id="emailCol" prefWidth="150" text="Email"/>
                    <TableColumn fx:id="entrepriseCol" prefWidth="140" text="Entreprise"/>
                    <TableColumn fx:id="dateDebutCol" prefWidth="120" text="Date début"/>
                    <TableColumn fx:id="dateFinCol" prefWidth="120" text="Date fin"/>
                    <TableColumn fx:id="typeCol" prefWidth="100" text="Type"/>
                    <TableColumn fx:id="statutCol" prefWidth="120" text="Statut"/>
                    <TableColumn fx:id="commentaireCol" prefWidth="110" text="Commentaire"/>
                </columns>

            </TableView>

        </VBox>

        <Button layoutX="760" layoutY="560"
                prefWidth="120" prefHeight="35"
                text="Fermer"
                onAction="#closeView"
                style="-fx-background-radius: 20;
                       -fx-background-color: linear-gradient(to right, #2b8af6, #6a5af9);
                       -fx-text-fill: white;
                       -fx-font-size: 14px;"/>

    </children>

</AnchorPane>
