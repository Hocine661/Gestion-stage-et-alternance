<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="750.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.ece.application.RegisterController">

    <children>

        <VBox alignment="CENTER" layoutX="150" layoutY="20" prefWidth="450" spacing="25">

            <ImageView fitHeight="174.0" fitWidth="200.0" preserveRatio="true">
                <image>
                    <Image url="@logo2.png"/>
                </image>
            </ImageView>

            <Label prefHeight="21.0" prefWidth="204.0" text="Créer un compte" textFill="#3e6296">
                <font>
                    <Font name="System Bold" size="26"/>
                </font>
            </Label>

            <VBox alignment="CENTER_LEFT" prefHeight="299.0" prefWidth="450.0" spacing="5"
                  style="-fx-background-color: #F6F6F6;                          -fx-background-radius: 25;                          -fx-padding: 25;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 2);">

                <HBox spacing="15">
                    <VBox spacing="5">
                        <Label text="Nom :" textFill="#3e4a70"/>
                        <TextField fx:id="nomField" prefHeight="35" prefWidth="180"
                                   style="-fx-background-radius: 10; -fx-background-color: white;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Prénom :" textFill="#3e4a70"/>
                        <TextField fx:id="prenomField" prefHeight="35" prefWidth="180"
                                   style="-fx-background-radius: 10; -fx-background-color: white;"/>
                    </VBox>
                </HBox>

                <VBox spacing="5">
                    <Label text="Email :" textFill="#3e4a70"/>
                    <TextField fx:id="emailField" prefHeight="35" prefWidth="380"
                               style="-fx-background-radius: 10; -fx-background-color: white;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Mot de passe :" textFill="#3e4a70"/>
                    <PasswordField fx:id="mdpField" prefHeight="35" prefWidth="380"
                                   style="-fx-background-radius: 10; -fx-background-color: white;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Rôle :" textFill="#3e4a70"/>

                    <HBox alignment="CENTER_LEFT" spacing="60">
                        <RadioButton fx:id="eleveRadio" mnemonicParsing="false" text="Élève">
                            <toggleGroup>
                                <ToggleGroup fx:id="roleGroup"/>
                            </toggleGroup>
                        </RadioButton>

                        <RadioButton fx:id="scolaritéRadio" mnemonicParsing="false" text="Scolarité"
                                     toggleGroup="$roleGroup"/>
                    </HBox>
                </VBox>

                <HBox alignment="CENTER">
                    <Button fx:id="inscriptionButton" onAction="#inscription" prefHeight="40" prefWidth="200"
                            style="-fx-background-radius: 20;                                    -fx-background-color: linear-gradient(to right, #2b8af6, #6a5af9);                                    -fx-text-fill: white;"
                            text="S'inscrire">
                        <font>
                            <Font name="System Bold" size="14"/>
                        </font>
                    </Button>
                </HBox>

            </VBox>
        </VBox>

    </children>
</AnchorPane>
