<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

    <!-- TITRE EN HAUT -->
    <top>
        <Label text="Gestion des Commentaires"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- LISTE DES COMMENTAIRES -->
    <center>
        <ListView fx:id="listCommentaires"
                  prefHeight="300"
                  prefWidth="500"
                  BorderPane.alignment="CENTER"/>
    </center>

    <!-- AJOUT D'UN COMMENTAIRE EN BAS -->
    <bottom>
        <VBox spacing="10" padding="15">
            <Label text="Ajouter un commentaire :"
                   style="-fx-font-size: 14px;"/>

            <TextArea fx:id="txtCommentaire"
                      prefRowCount="3"/>

            <Button fx:id="btnAjouter"
                    text="Ajouter le commentaire"
                    style="-fx-padding: 10; -fx-font-size: 14px;"/>
        </VBox>
    </bottom>

</BorderPane>
