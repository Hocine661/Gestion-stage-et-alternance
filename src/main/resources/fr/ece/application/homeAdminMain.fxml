<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="900" style="-fx-background-color: linear-gradient(to bottom right, #1a73e8, #4fa3ff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ece.application.HomeAdminMainController">

    <!-- ======= HEADER (profil + nom admin + logout) ======= -->
    <HBox alignment="CENTER_RIGHT" prefHeight="70" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="0">

        <!-- Nom Admin -->
        <Label fx:id="adminNameLabel" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Admin: --" />

        <!-- Bouton Déconnexion -->
        <Button fx:id="btnLogout" prefHeight="40" prefWidth="130" style="-fx-background-color: white; -fx-text-fill: #1a73e8;                        -fx-font-size: 16px; -fx-font-weight: bold;                        -fx-background-radius: 10;" text="Déconnexion" />

    </HBox>

    <!-- ======= CARTE CENTRALE ======= -->
    <VBox alignment="CENTER" prefHeight="450" prefWidth="600" spacing="25" style="-fx-background-color: white;                  -fx-background-radius: 20;                  -fx-padding: 30;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);" AnchorPane.leftAnchor="150" AnchorPane.topAnchor="90">

        <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1a73e8;" text="Bienvenue dans l’Espace Admin" />

        <Label style="-fx-font-size: 17px; -fx-text-fill: #333;" text="Choisissez une action :" />


        <!-- ======= LES BOUTONS ======= -->
        <VBox alignment="CENTER" spacing="15">

            <Button fx:id="btnDeclarations" onAction="#openDeclarations" prefHeight="55" prefWidth="320" style="-fx-background-color: #1a73e8; -fx-text-fill: white;                            -fx-font-size: 18px; -fx-font-weight: bold;                            -fx-background-radius: 12;" text="Afficher les Déclarations" />

            <Button fx:id="btnEtudiants" onAction="#openEtudiants" prefHeight="55" prefWidth="320" style="-fx-background-color: #1a73e8; -fx-text-fill: white;                            -fx-font-size: 18px; -fx-font-weight: bold;                            -fx-background-radius: 12;" text="Liste des Étudiants" />

            <Button fx:id="btnEntreprises" onAction="#openEntreprises" prefHeight="55" prefWidth="320" style="-fx-background-color: #1a73e8; -fx-text-fill: white;                            -fx-font-size: 18px; -fx-font-weight: bold;                            -fx-background-radius: 12;" text="Liste des Entreprises" />

            <Button fx:id="btnCommentaires" prefHeight="55" prefWidth="320" style="-fx-background-color: #1a73e8; -fx-text-fill: white;                            -fx-font-size: 18px; -fx-font-weight: bold;                            -fx-background-radius: 12;" text="Ajouter un Commentaire" />
        </VBox>

    </VBox>

</AnchorPane>
