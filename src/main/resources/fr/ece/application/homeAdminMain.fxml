<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.ece.application.HomeAdminMainController"
            style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f0ff);">

    <children>

        <!-- ===== HEADER ===== -->
        <HBox alignment="CENTER_RIGHT" spacing="20"
              prefHeight="80"
              AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="10">

            <!-- LOGO TALENTWAVE -->
            <ImageView fitHeight="160" preserveRatio="true">
                <image>
                    <Image url="@logo2.png"/>
                </image>
            </ImageView>

            <Pane HBox.hgrow="ALWAYS" /> <!-- espace flexible -->

            <!-- Nom Admin -->
            <Label fx:id="adminNameLabel"
                   style="-fx-text-fill: black; -fx-font-size: 20px; -fx-font-weight: bold;"
                   text="Admin: --" />

            <!-- Bouton Déconnexion -->
            <Button fx:id="btnLogout"
                    text="Déconnexion"
                    onAction="#logout"
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: white;
                           -fx-text-fill: #2b8af6;
                           -fx-font-size: 15px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 15;" />
        </HBox>

        <!-- ===== CARD CENTRALE ===== -->
        <VBox alignment="CENTER" spacing="25"
              prefWidth="550" prefHeight="450"
              AnchorPane.leftAnchor="175" AnchorPane.topAnchor="120"
              style="-fx-background-color: white;
                     -fx-background-radius: 25;
                     -fx-padding: 30;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);">

            <!-- Titre -->
            <Label text="Espace Administrateur"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2b8af6;" />

            <Label text="Sélectionnez une action"
                   style="-fx-font-size: 17px; -fx-text-fill: #555;" />

            <!-- ===== BOUTONS ===== -->
            <VBox spacing="20" alignment="CENTER">

                <Button fx:id="btnDeclarations"
                        text="Afficher les Déclarations"
                        onAction="#openDeclarations"
                        prefWidth="350" prefHeight="55"
                        style="-fx-background-color: linear-gradient(to right, #2b8af6, #6a5af9);
                               -fx-text-fill: white;
                               -fx-font-size: 18px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 15;" />

                <Button fx:id="btnEtudiants"
                        text="Liste des Étudiants"
                        onAction="#openEtudiants"
                        prefWidth="350" prefHeight="55"
                        style="-fx-background-color: linear-gradient(to right, #2b8af6, #6a5af9);
                               -fx-text-fill: white;
                               -fx-font-size: 18px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 15;" />

                <Button fx:id="btnEntreprises"
                        text="Liste des Entreprises"
                        onAction="#openEntreprises"
                        prefWidth="350" prefHeight="55"
                        style="-fx-background-color: linear-gradient(to right, #2b8af6, #6a5af9);
                               -fx-text-fill: white;
                               -fx-font-size: 18px;
                               -fx-font-weight: bold;
                               -fx-background-radius: 15;" />
            </VBox>

        </VBox>

    </children>

</AnchorPane>
