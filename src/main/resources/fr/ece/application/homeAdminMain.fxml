<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.ece.application.HomeAdminMainController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #1a73e8, #4fa3ff);">

    <!-- ======= HEADER (profil + nom admin + logout) ======= -->
    <HBox spacing="15"
          alignment="CENTER_RIGHT"
          prefHeight="70"
          AnchorPane.topAnchor="0"
          AnchorPane.rightAnchor="20"
          AnchorPane.leftAnchor="20">

        <!-- Nom Admin -->
        <Label fx:id="adminNameLabel"
               text="Admin: --"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />

        <!-- Bouton Déconnexion -->
        <Button fx:id="btnLogout"
                text="Déconnexion"
                style="-fx-background-color: white; -fx-text-fill: #1a73e8;
                       -fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-radius: 10;"
                prefWidth="130" prefHeight="40"/>

    </HBox>

    <!-- ======= CARTE CENTRALE ======= -->
    <VBox alignment="CENTER" spacing="25"
          prefWidth="600" prefHeight="450"
          AnchorPane.leftAnchor="150"
          AnchorPane.topAnchor="90"
          style="-fx-background-color: white;
                 -fx-background-radius: 20;
                 -fx-padding: 30;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);">

        <Label text="Bienvenue dans l’Espace Admin"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1a73e8;" />

        <Label text="Choisissez une action :"
               style="-fx-font-size: 17px; -fx-text-fill: #333;" />


        <!-- ======= LES BOUTONS ======= -->
        <VBox alignment="CENTER" spacing="15">

            <Button fx:id="btnDeclarations"
                    text="Afficher les Déclarations"
                    prefWidth="320" prefHeight="55"
                    style="-fx-background-color: #1a73e8; -fx-text-fill: white;
                           -fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-radius: 12;" />

            <Button fx:id="btnEtudiants"
                    text="Liste des Étudiants"
                    prefWidth="320" prefHeight="55"
                    style="-fx-background-color: #1a73e8; -fx-text-fill: white;
                           -fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-radius: 12;" />

            <Button fx:id="btnEntreprises"
                    text="Liste des Entreprises"
                    prefWidth="320" prefHeight="55"
                    style="-fx-background-color: #1a73e8; -fx-text-fill: white;
                           -fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-radius: 12;" />

            <Button fx:id="btnCommentaires"
                    text="Ajouter un Commentaire"
                    prefWidth="320" prefHeight="55"
                    style="-fx-background-color: #1a73e8; -fx-text-fill: white;
                           -fx-font-size: 18px; -fx-font-weight: bold;
                           -fx-background-radius: 12;" />
        </VBox>

    </VBox>

</AnchorPane>

