<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.ece.application.LoginController"
            style="-fx-background-color: white;">

    <children>

        <!-- Conteneur centré -->
        <VBox alignment="CENTER" spacing="25" prefWidth="450"
              layoutX="150" layoutY="40">

            <!-- LOGO TALENTWAVE -->
            <ImageView fitHeight="200" preserveRatio="true">
                <image>
                    <!-- Mets ton image logo ici (dans resources) -->
                    <Image url="@logo2.png"/>
                </image>
            </ImageView>

            <!-- Titre -->
            <Label text="Connexion à TalentWave" textFill="#3e4a70">
                <font>
                    <Font name="System Bold" size="26"/>
                </font>
            </Label>

            <!-- CARD -->
            <VBox spacing="15" alignment="CENTER"
                  prefWidth="250" prefHeight="200"
                  style="-fx-background-color: #F6F6F6;
                         -fx-background-radius: 25;
                         -fx-padding: 25;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 2);">

                <!-- Champ email -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Email :" textFill="#3e4a70">
                        <font><Font size="15"/></font>
                    </Label>
                    <TextField fx:id="emailField"
                               prefWidth="350" prefHeight="38"
                               style="-fx-background-color: white;
                                      -fx-background-radius: 10;
                                      -fx-border-radius: 10;
                                      -fx-border-color: #d6d6d6;" />
                </VBox>

                <!-- Champ mot de passe -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Mot de passe :" textFill="#3e4a70">
                        <font><Font size="15"/></font>
                    </Label>
                    <PasswordField fx:id="mdpField"
                                   prefWidth="350" prefHeight="38"
                                   style="-fx-background-color: white;
                                          -fx-background-radius: 10;
                                          -fx-border-radius: 10;
                                          -fx-border-color: #d6d6d6;" />
                </VBox>

                <!-- Bouton connexion -->
                <Button fx:id="loginButton"
                        text="Connexion"
                        onAction="#handleLogin"
                        prefWidth="180" prefHeight="40"
                        style="-fx-background-radius: 20;
                               -fx-background-color: linear-gradient(to right, #2b8af6, #6a5af9);
                               -fx-text-fill: white;">
                    <font>
                        <Font name="Arial Bold" size="14"/>
                    </font>
                </Button>

            </VBox>
        </VBox>

    </children>
</AnchorPane>

