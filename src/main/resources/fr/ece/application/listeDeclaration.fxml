<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="520" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ece.application.ListeDeclarationController">

    <TableView fx:id="tableView" layoutX="20" layoutY="60" prefHeight="400" prefWidth="860">

        <columns>

            <TableColumn fx:id="emailCol" prefWidth="150" text="Email" />
            <TableColumn fx:id="entrepriseCol" prefWidth="140" text="Entreprise" />
            <TableColumn fx:id="dateDebutCol" prefWidth="120" text="Date Début" />
            <TableColumn fx:id="dateFinCol" prefWidth="120" text="Date Fin" />
            <TableColumn fx:id="typeCol" prefWidth="100" text="Type" />

            <!-- Colonne statut modifiable -->
            <TableColumn fx:id="statutCol" prefWidth="120" text="Statut" />

            <!-- Bouton ajouter commentaire -->
            <TableColumn fx:id="commentaireCol" prefWidth="110" text="Commentaire" />

        </columns>

    </TableView>

    <Label layoutX="20" layoutY="20" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Liste des Déclarations" />
   <Button layoutX="656.0" layoutY="481.0" mnemonicParsing="false" onAction="#closeView" text="Fermer" />

</AnchorPane>
