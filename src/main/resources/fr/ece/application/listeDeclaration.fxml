<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.ece.application.ListeDeclarationController"
            prefWidth="900" prefHeight="520">

    <TableView fx:id="tableView" layoutX="20" layoutY="60" prefWidth="860" prefHeight="400">

        <columns>

            <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
            <TableColumn fx:id="entrepriseCol" text="Entreprise" prefWidth="140"/>
            <TableColumn fx:id="dateDebutCol" text="Date Début" prefWidth="120"/>
            <TableColumn fx:id="dateFinCol" text="Date Fin" prefWidth="120"/>
            <TableColumn fx:id="typeCol" text="Type" prefWidth="100"/>

            <!-- Colonne statut modifiable -->
            <TableColumn fx:id="statutCol" text="Statut" prefWidth="120"/>

            <!-- Bouton ajouter commentaire -->
            <TableColumn fx:id="commentaireCol" text="Commentaire" prefWidth="110" />

        </columns>

    </TableView>

    <Label text="Liste des Déclarations" layoutX="20" layoutY="20"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

</AnchorPane>

